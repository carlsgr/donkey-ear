<% if following?(user) %>
  <%= button_to "Unfollow", relationship_path(current_user.following_relationship.find_by_user_id(user)), method: :delete, remote: true, class: 'btn btn-success' %>
<% else %>
  <%= button_to "Follow", relationships_path(followee_id: user.id), method: :post, remote: true, class: 'btn btn-primary' %>
<% end %>